<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/calendar_top_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >

        <include layout="@layout/title_common" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/left_linearLayout"
        android:layout_width="60dp"
        android:layout_height="fill_parent"
        android:layout_above="@+id/calendar_button_nar"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/calendar_top_title"
        android:gravity="center"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/calendar_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rd_icon44" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_linearLayout"
        android:layout_width="60dp"
        android:layout_height="fill_parent"
        android:layout_above="@+id/calendar_button_nar"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/calendar_top_title"
        android:gravity="center" >

        <ImageView
            android:id="@+id/calendar_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rd_icon43" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/calendar_top_title"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rd_1_bj"
        android:orientation="vertical"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="60"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/currentyear"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="2015年"
                        android:textColor="#7f7266"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/currentmouth"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/currentyear"
                        android:gravity="center"
                        android:text="6月"
                        android:textColor="#1b1b1b"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/type3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="15dp"
                        android:drawableLeft="@drawable/rd_h01"
                        android:gravity="center"
                        android:text="全国两会"
                        android:textColor="#05a6e9"
                        android:textSize="20dp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/type2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="15dp"
                        android:layout_toLeftOf="@+id/type3"
                        android:drawableLeft="@drawable/rd_h03"
                        android:gravity="center"
                        android:text="常委会会议"
                        android:textColor="#007fd0"
                        android:textSize="20dp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/type1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="15dp"
                        android:layout_toLeftOf="@+id/type2"
                        android:drawableLeft="@drawable/rd_h02"
                        android:gravity="center"
                        android:text="主任会议"
                        android:textColor="#2d8a00"
                        android:textSize="20dp"
                        android:visibility="visible" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#43557b" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent" >

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="星期一"
                            android:textColor="#43557b"
                            android:textSize="20dp" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="fill_parent"
                            android:background="#a9a9a9" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="星期二"
                            android:textColor="#43557b"
                            android:textSize="20dp" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="fill_parent"
                            android:background="#a9a9a9" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="星期三"
                            android:textColor="#43557b"
                            android:textSize="20dp" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="fill_parent"
                            android:background="#a9a9a9" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="星期四"
                            android:textColor="#43557b"
                            android:textSize="20dp" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="fill_parent"
                            android:background="#a9a9a9" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="星期五"
                            android:textColor="#43557b"
                            android:textSize="20dp" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="fill_parent"
                            android:background="#a9a9a9" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="星期六"
                            android:textColor="#ff0000"
                            android:textSize="20dp" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="fill_parent"
                            android:background="#a9a9a9" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="星期日"
                            android:textColor="#ff0000"
                            android:textSize="20dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="18"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#ccc" />

                <GridView
                    android:id="@+id/grid"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@android:color/transparent"
                    android:listSelector="#00000000"
                    android:numColumns="7" >
                </GridView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/rgp_month_nar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="#dfdad6"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rdb_one"
            style="@style/radio_tab"
            android:checked="true"
            android:text="一月" />

        <RadioButton
            android:id="@+id/rdb_two"
            style="@style/radio_tab"
            android:text="二月" />

        <RadioButton
            android:id="@+id/rdb_three"
            style="@style/radio_tab"
            android:text="三月" />

        <RadioButton
            android:id="@+id/rdb_four"
            style="@style/radio_tab"
            android:text="四月" />

        <RadioButton
            android:id="@+id/rdb_five"
            style="@style/radio_tab"
            android:text="五月" />

        <RadioButton
            android:id="@+id/rdb_six"
            style="@style/radio_tab"
            android:text="六月" />

        <RadioButton
            android:id="@+id/rdb_seven"
            style="@style/radio_tab"
            android:text="七月" />

        <RadioButton
            android:id="@+id/rdb_eight"
            style="@style/radio_tab"
            android:text="八月" />

        <RadioButton
            android:id="@+id/rdb_nine"
            style="@style/radio_tab"
            android:text="九月" />

        <RadioButton
            android:id="@+id/rdb_ten"
            style="@style/radio_tab"
            android:text="十月" />

        <RadioButton
            android:id="@+id/rdb_eleven"
            style="@style/radio_tab"
            android:text="十一月" />

        <RadioButton
            android:id="@+id/rdb_twelve"
            style="@style/radio_tab"
            android:text="十二月" />
    </RadioGroup>
</RelativeLayout>